[all:vars]

# set this to false if the openshift-gitops operator is already installed
openshift_gitops_operator_install=true
# set to false if amq streams is already installed
amq_streams_operator_install=true
# set to false if the Red Hat Developer Hub operator is already installed
rhdh_operator_install=true

# RHTAP uses a different ingresss cert name
openshift_ingress_secret_certs_secret=cert-manager-ingress-cert

# GitHub configuration for RHDH
# Create a GitHub App following: https://developers.redhat.com/articles/2025/01/07/backstage-authentication-and-catalog-providers-practical-guide
# IMPORTANT: Fork this repository to your GitHub organization first!
# GitHub organization where you forked this repository
# This must match the organization where you created your GitHub App
# Example: acme-corp (if you forked to https://github.com/acme-corp/from-ai-hype-to-platform-reality)
github_organization=your-github-org
github_app_id=123456
github_client_id=Iv1.abc123def456
github_client_secret=your-github-app-client-secret
# Path to the GitHub App private key PEM file
# Save your GitHub App's private key .pem file and reference it here
# Can be relative to the playbook directory or an absolute path
github_private_key_file=github-app-private-key.pem

